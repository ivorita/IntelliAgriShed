<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
android:layout_marginStart="16dp"
android:layout_marginTop="16dp"
android:layout_marginEnd="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="通风系统"
        android:textColor="#bdbdbd"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/door_1"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/door_close" />

        <ImageView
            android:id="@+id/door_2"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/door_close" />

        <ImageView
            android:id="@+id/door_3"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/door_close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1号顶窗"
            style="@style/Green_remote_item_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2号顶窗"
            style="@style/Green_remote_item_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3号顶窗"
            style="@style/Green_remote_item_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/door_1_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/turn_off"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/door_2_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/turn_off"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/door_3_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/turn_off"
            android:textSize="16sp"/>

    </LinearLayout>

    <View style="@style/setting_divider_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/warm_air_1"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/warm_air_off" />

        <ImageView
            android:id="@+id/warm_air_2"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/warm_air_off" />

        <ImageView
            android:id="@+id/fan"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/fan_off" />

        <!--<ProgressBar
            android:id="@+id/fan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/loading"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1号暖风机"
            style="@style/Green_remote_item_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2号暖风机"
            style="@style/Green_remote_item_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="通风机"
            style="@style/Green_remote_item_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warm_status_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/turn_off"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/warm_status_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/turn_off"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/fan_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/turn_off"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>

</android.support.design.card.MaterialCardView>