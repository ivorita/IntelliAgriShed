<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通风系统"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/door_1"
                android:src="@drawable/door_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="76dp" />

            <ImageView
                android:id="@+id/door_2"
                android:src="@drawable/door_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="76dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1号顶窗"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2号顶窗"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/door_1_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/turn_off"
                android:gravity="center"/>

            <TextView
                android:id="@+id/door_2_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/turn_off"
                android:gravity="center"/>

        </LinearLayout>

        <View style="@style/setting_divider_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/door_3"
                android:src="@drawable/door_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="76dp" />

            <ImageView
                android:id="@+id/fan"
                android:src="@drawable/fan_off"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="76dp" />

            <!--<ProgressBar
                android:id="@+id/fan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="76dp"
                android:layout_gravity="center_vertical"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/loading"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3号顶窗"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="通风机"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/door_3_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/turn_off"
                android:gravity="center"/>

            <TextView
                android:id="@+id/fan_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/turn_off"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>