<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/network_state"
                android:textColor="#bdbdbd" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/network_state_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/internet_connect" />

                <TextView
                    android:id="@+id/network_state_tv"
                    style="@style/Green_param_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/network_state_iv"
                    android:text="@string/connect_state" />

                <TextView
                    android:id="@+id/deviceState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/network_state_tv"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/network_state_iv"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    tools:text="未连接" />

            </RelativeLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_state"
                    android:layout_margin="10dp"
                    android:paddingStart="5dp"
                    style="@style/Black_Text_16" />

                <TextView
                    android:id="@+id/deviceState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="未连接"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/Black_Text_16" />

            </LinearLayout>-->

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/param_setting"
                android:textColor="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <TextView
                    style="@style/Green_param_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="@string/ip" />

                <EditText
                    android:id="@+id/IpAddress1"
                    android:layout_width="@dimen/edit_text_width_ip"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:inputType="number" />

                <TextView
                    style="@style/Black_Text_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#757575"
                    android:text="@string/dot" />

                <EditText
                    android:id="@+id/IpAddress2"
                    android:layout_width="@dimen/edit_text_width_ip"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:inputType="number" />

                <TextView
                    style="@style/Black_Text_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#757575"
                    android:text="@string/dot" />

                <EditText
                    android:id="@+id/IpAddress3"
                    android:layout_width="@dimen/edit_text_width_ip"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:inputType="number" />

                <TextView
                    style="@style/Black_Text_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#757575"
                    android:text="@string/dot" />

                <EditText
                    android:id="@+id/IpAddress4"
                    android:layout_width="@dimen/edit_text_width_ip"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:inputType="number" />

            </LinearLayout>

            <View style="@style/setting_divider_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <TextView
                    style="@style/Green_param_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="目标端口：" />

                <EditText
                    android:id="@+id/PortNumber"
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:inputType="number" />

            </LinearLayout>

            <View style="@style/setting_divider_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="16dp">

                    <TextView
                        style="@style/Green_param_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="5dp"
                        android:text="TCP超时时间：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/TCPKeepAlive"
                            android:layout_width="@dimen/edit_text_width_other"
                            android:layout_height="38dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="#757575"/>

                        <TextView
                            style="@style/Green_param_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="秒" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="20dp">

                    <TextView
                        style="@style/Green_param_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="5dp"
                        android:text="TCP发送间隔：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/SendTimeInterval"
                            android:layout_width="@dimen/edit_text_width_other"
                            android:layout_height="38dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="#757575"/>

                        <TextView
                            style="@style/Green_param_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="秒" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <View style="@style/setting_divider_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/save"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/save"
                    android:text="@string/save_confirm"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/restore"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/restore"
                    android:text="@string/restore"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>


</LinearLayout>